<Window x:Class="WPF1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="textBox" HorizontalAlignment="Center" Margin="0,67,0,0" TextWrapping="Wrap" Text="helloWorld" VerticalAlignment="Top" Width="112" Height="26" Background="#FF9CC6FA" FontFamily="Consolas" BorderBrush="#FF0040FF" Foreground="#FFFFFCFC" SelectionBrush="#FF7B9BB4" FontSize="18" FontWeight="Bold"/>
        <RadioButton x:Name="helloButton" Content="hello" HorizontalAlignment="Left" Margin="250,196,0,0" VerticalAlignment="Top" IsChecked="True" />
        <RadioButton x:Name="goodByeButton" Content="goodBysButton" HorizontalAlignment="Left" Margin="458,193,0,0" VerticalAlignment="Top"/>
        <Button Content="Display" HorizontalAlignment="Center" Margin="0,272,0,0" VerticalAlignment="Top" Height="44" Width="96" Click="Button_Click" Background="#FF9CC6FA" FontFamily="Consolas" BorderBrush="#FF0040FF" Foreground="#FFFFFCFC"  FontSize="18" FontWeight="Bold"/>

    </Grid>
</Window>
